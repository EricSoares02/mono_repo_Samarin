generator client {
  provider = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Users {

  id String @db.VarChar(36) @default(uuid()) @id 
  name  String
  surname String
  birth_date DateTime
  user_tag String @unique
  bio String?
  profile_picture String?
  email String  @unique
  password String
  interest String[]
  sexual_orientation String
  gender_indentity String
  state String
  createdAt DateTime @default(now())
  updatedAt DateTime? 
  address Address?
}

model Address {
  
  id String @db.VarChar(36) @default(uuid()) @id 
  city String
  state String
  country String
  user Users @relation(fields: [userTag], references: [user_tag])
  userTag String @unique
}